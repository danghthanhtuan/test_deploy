    <style>
        .notification {
            border: 1px solid #ccc;
            border-left: 5px solid;
            border-radius: 6px;
            padding: 8px 10px;
            margin-bottom: 6px;
            transition: background-color 0.3s ease;
            cursor: pointer;
        }

            .notification.unread {
                background-color: #f0f8ff;
                border-left-color: #007bff;
            }

            .notification.read {
                background-color: #f8f9fa;
                border-left-color: #6c757d;
                color: #6c757d;
            }

        .notification-title {
            font-size: 13px;
            font-weight: bold;
            margin-bottom: 2px;
        }

        .notification-content {
            font-size: 13px;
        }

        .notification-time {
            font-size: 12px;
            color: gray;
            margin-top: 3px;
        }

        .notification-icon {
            position: relative;
            display: inline-block;
            font-size: 24px;
        }

        .badge {
            position: sticky;
            top: -5px;
            right: -8px;
            padding: 3px 6px;
            border-radius: 50%;
            background-color: red;
            color: white;
            font-size: 12px;
            font-weight: bold;
            min-width: 20px;
            text-align: center;
        }
    </style>

